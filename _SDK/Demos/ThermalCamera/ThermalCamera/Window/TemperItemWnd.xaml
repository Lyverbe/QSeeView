<Window x:Class="ThermalCamera.window.TemperItemWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wnd="clr-namespace:ThermalCamera.ViewModel"
        Title="TemperItemWnd(测温项信息查询)" Height="450" Width="350"
        ResizeMode="NoResize" ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <wnd:TemperItemViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Margin="5">
            <GroupBox Header="Query Condition(查询条件)" Margin="5,0">
                <StackPanel>
                    <WrapPanel Margin="0,5">
                        <TextBlock Text="PresetId(预置点编号):" Width="150"/>
                        <TextBox Width="120" Text="{Binding PresetID}" PreviewTextInput="TextBox_PreviewTextInput_PresetId"/>
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Text="RuleId(规则编号):" Width="150"/>
                        <TextBox Width="120" Text="{Binding RuleId}" PreviewTextInput="TextBox_PreviewTextInput_RuleId"/>
                    </WrapPanel>
                    <WrapPanel Margin="0,5">
                        <TextBlock Text="MeterType(测温项类别):" Width="150"/>
                        <ComboBox Width="120" Height="20" ItemsSource="{Binding MeterTypeList}" SelectedIndex="{Binding QueryMeterType}"/>
                    </WrapPanel>
                    <WrapPanel Margin="0,5">
                        <TextBlock Text="Channel(通道):" Width="150"/>
                        <TextBox Width="120" Text="{Binding Channel}" PreviewTextInput="TextBox_PreviewTextInput_Channel"/>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Center">
                        <Button Content="Query(查询)" Height="25" Width="80" Command="{Binding QueryCmd}"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Query Result(查询结果)">
                <StackPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="MeterType(测温类型):" Width="150" Margin="10,0"/>
                        <TextBox Width="120" Text="{Binding MeterType}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="TemperUnit(温度单位):" Width="150" Margin="10,0"/>
                        <TextBox Width="120" Text="{Binding TemperUnit}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="Temperature(温度):" Width="150" Margin="10,0"/>
                        <TextBox Width="120" Text="{Binding TemperAver}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="MaxTemper(最高温度):" Width="150" Margin="10,0"/>
                        <TextBox Width="120" Text="{Binding TemperMax}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="MinTemper(最低温度):" Width="150" Margin="10,0"/>
                        <TextBox Width="120" Text="{Binding TemperMin}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="MidTemper(中间温度):" Width="150" Margin="10,0"/>
                        <TextBox Width="120" Text="{Binding TemperMid}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="StdTemper(标准方差值):" Width="150" Margin="10,0"/>
                        <TextBox Width="120" Text="{Binding TemperStd}" IsReadOnly="True"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
