<Window x:Class="ThermalCamera.window.TemperPointWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wnd="clr-namespace:ThermalCamera.ViewModel"
        Title="TemperPointWnd(测温点信息查询)" Height="430" Width="300"
        ResizeMode="NoResize" ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <wnd:TemperPointViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <GroupBox Header="Query(查询)">
                <StackPanel Margin="0,5">
                    <GroupBox Header="Point Coordinate(测温点坐标)" Margin="5" Height="60">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="X:" Margin="5"/>
                            <TextBox Width="50" Height="20" Text="{Binding CoordinateX}" PreviewTextInput="TextBox_PreviewTextInput_X"/>
                            <TextBlock Text="Y:" Margin="5"/>
                            <TextBox Width="50" Height="20" Text="{Binding CoordinateY}" PreviewTextInput="TextBox_PreviewTextInput_Y"/>
                        </StackPanel>
                    </GroupBox>
                    <WrapPanel Margin="5,0">
                        <TextBlock Text="Channel(通道):" VerticalAlignment="Center"/>
                        <TextBox Width="50" Height="20" Margin="5,0" Text="{Binding QueryChannel}" PreviewTextInput="TextBox_PreviewTextInput_Channel"/>
                        <Button Content="Query(查询)" Margin="20,0" Width="80" Height="25" Command="{Binding QueryCmd}"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Query Result(查询结果)">
                <StackPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="MeterType(测温类型):" Width="150" Margin="10,0"/>
                        <TextBox Width="80" Text="{Binding MeterType}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="TemperUnit(温度单位):" Width="150" Margin="10,0"/>
                        <TextBox Width="80" Text="{Binding TemperUnit}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="Temperature(温度):" Width="150" Margin="10,0"/>
                        <TextBox Width="80" Text="{Binding TemperAver}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="MaxTemper(最高温度):" Width="150" Margin="10,0"/>
                        <TextBox Width="80" Text="{Binding TemperMax}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="MinTemper(最低温度):" Width="150" Margin="10,0"/>
                        <TextBox Width="80" Text="{Binding TemperMin}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="MidTemper(中间温度):" Width="150" Margin="10,0"/>
                        <TextBox Width="80" Text="{Binding TemperMid}" IsReadOnly="True"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="StdTemper(标准方差值):" Width="150" Margin="10,0"/>
                        <TextBox Width="80" Text="{Binding TemperStd}" IsReadOnly="True"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
